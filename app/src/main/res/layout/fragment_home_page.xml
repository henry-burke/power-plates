<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:backgroundTint="@color/buttonColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">

        <TextView
            android:id="@+id/beginnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="36sp"
            android:paddingHorizontal="48dp"
            android:paddingVertical="32dp"
            android:gravity="center"
            android:background="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        android:layout_marginTop="72dp"
        android:paddingVertical="36dp"
        android:paddingHorizontal="24dp"
        android:background="@color/inputBackground">

        <TextView
            android:id="@+id/workout_stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_workout_statistics"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="60dp"/>

        <TableRow
            android:id="@+id/table_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/buttonColor"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/category_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/num_workouts_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/top_exercise_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <!--PUSH-->
        <TableRow
            android:id="@+id/push_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/push_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/push_num_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/push_top_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <!--PULL-->
        <TableRow
            android:id="@+id/pull_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/pull_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/pull_num_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/pull_top_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <!--LEGS-->
        <TableRow
            android:id="@+id/legs_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/legs_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/legs_num_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/legs_top_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <!--CARDIO-->
        <TableRow
            android:id="@+id/cardio_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/cardio_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/cardio_num_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/cardio_top_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <!--ABS-->
        <TableRow
            android:id="@+id/abs_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/abs_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/abs_num_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts_done"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/abs_top_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/top_exercise"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
