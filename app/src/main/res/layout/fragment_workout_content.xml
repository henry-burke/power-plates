<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/primary_muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Muscle"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/secondary_muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Muscle"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/compound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compound/Isolated"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/progression_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progression Type"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_marginBottom="4dp" />

</LinearLayout>